{% extends 'base.html.twig' %}

{% block title %}Nooblog|Liste des catégories
{% endblock %}

{% block body %}
	<h1>Liste des catégories</h1>
	<div class="list-group">
		{% if categories|length >0 %}
			{% for category in categories %}
				<a href="{{path('app_category_show',{id:category.id})}}" class="list-group-item list-group_item-action">
					{{category.name}}
				</a>
			{% endfor %}
		{% endif %}
		<a href="{{path('app_category_show',{id:0})}}" class="list-group-item list-group-item-action">Non classé</a>
	</div>
{% endblock %}
